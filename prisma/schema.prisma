generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String              @id @default(cuid())
  name          String?
  email         String?             @unique
  image         String?
  createdAt     DateTime            @default(now())
  emailVerified DateTime?
  password      String?
  updatedAt     DateTime            @default(now()) @updatedAt
  creditCents   Int                 @default(0)
  accounts      Account[]
  sessions      Session[]
  tickets       Ticket[]
  transactions  WalletTransaction[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WalletTransaction {
  id          String   @id @default(cuid())
  userId      String
  gameId      String? 
  drawId      String? 
  type        String
  amountCents Int
  reference   String?
  description String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game        Game?    @relation(fields: [gameId], references: [id]) 
  draw        Draw?    @relation(fields: [drawId], references: [id])

}


model Game {
  id                  String   @id @default(cuid())
  slug                String   @unique
  name                String
  description         String?
  priceCents          Int      @default(200)
  mainPickCount       Int
  mainRangeMin        Int      @default(1)
  mainRangeMax        Int
  specialPickCount    Int      @default(0)
  specialRangeMin     Int?
  specialRangeMax     Int?
  drawFrequency       String?
  jackpotCurrency     String   @default("AUD")
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  baseJackpotCents    Int      @default(500000000)
  jackpotGrowthPct    Float    @default(0.6)
  prizeDivisions      Json?
  currentJackpotCents Int      @default(0)
  iconName            String?
  draws               Draw[]
  tickets             Ticket[]
  walletTransactions  WalletTransaction[] 
}

model Draw {
  id                    String     @id @default(cuid())
  gameId                String
  drawNumber            Int
  drawDate              DateTime
  winningMainNumbers    Int[]
  winningSpecialNumbers Int[]
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt
  status                DrawStatus @default(UPCOMING)
  jackpotCents          Int        @default(0)
  totalSalesCents       Int        @default(0)
  winnersCount          Int?
  divisionResults       Json?
  totalPayoutCents      Int        @default(0)
  game                  Game       @relation(fields: [gameId], references: [id])
  tickets               Ticket[]
  walletTransactions    WalletTransaction[]
  
  @@index([gameId, status])
  @@index([gameId, drawDate])
}

model Ticket {
  id             String       @id @default(cuid())
  userId         String
  gameId         String
  drawId         String
  numbers        Int[]
  specialNumbers Int[]
  priceCents     Int
  payoutCents    Int?         @default(0)
  createdAt      DateTime     @default(now())
  status         TicketStatus @default(PENDING)
  draw           Draw         @relation(fields: [drawId], references: [id], onDelete: Cascade)
  game           Game         @relation(fields: [gameId], references: [id])
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([gameId, status])
}

enum DrawStatus {
  UPCOMING
  COMPLETED
}

enum TicketStatus {
  PENDING
  WON
  LOST
}
