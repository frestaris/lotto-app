// =============================================
// ‚úÖ PRISMA SCHEMA ‚Äî LOTTO APP
// ---------------------------------------------
// Defines all database models for users, games,
// draws, tickets, and wallet transactions.
// =============================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================
// üßç USER & AUTHENTICATION MODELS
// =============================================
model User {
  id            String              @id @default(cuid())
  name          String?
  email         String?             @unique
  image         String?
  password      String?
  emailVerified DateTime?
  creditCents   Int                 @default(0)

  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  tickets       Ticket[]
  transactions  WalletTransaction[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =============================================
// üí∞ WALLET TRANSACTIONS
// ---------------------------------------------
// Tracks all credit/debit activity: ticket purchases,
// winnings, top-ups, etc.
// =============================================
model WalletTransaction {
  id          String   @id @default(cuid())
  userId      String
  gameId      String?
  drawId      String?
  type        String               
  amountCents Int
  reference   String?
  description String?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game        Game?    @relation(fields: [gameId], references: [id])
  draw        Draw?    @relation(fields: [drawId], references: [id])

  @@index([userId])
}

// =============================================
// üéØ GAME MODEL
// ---------------------------------------------
// Defines the rules and jackpot data for each
// lottery game type.
// =============================================
model Game {
  id                  String   @id @default(cuid())
  slug                String   @unique
  name                String
  description         String?
  iconName            String?

  // Ticket setup
  priceCents          Int      @default(200)
  mainPickCount       Int
  mainRangeMin        Int      @default(1)
  mainRangeMax        Int
  specialPickCount    Int      @default(0)
  specialRangeMin     Int?
  specialRangeMax     Int?

  // Draw & jackpot settings
  drawFrequency       String?
  jackpotCurrency     String   @default("AUD")
  baseJackpotCents    Int      @default(500000000)
  jackpotGrowthPct    Float    @default(0.6)
  currentJackpotCents Int      @default(0)
  prizeDivisions      Json?    

  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  draws               Draw[]
  tickets             Ticket[]
  walletTransactions  WalletTransaction[]
}

// =============================================
// üóìÔ∏è DRAW MODEL
// ---------------------------------------------
// Represents a scheduled or completed draw for
// a specific game (linked to winning numbers).
// =============================================
model Draw {
  id                    String     @id @default(cuid())
  gameId                String
  drawNumber            Int
  drawDate              DateTime
  status                DrawStatus @default(UPCOMING)

  // Results data
  winningMainNumbers    Int[]
  winningSpecialNumbers Int[]
  divisionResults       Json?
  winnersCount          Int?
  jackpotCents          Int        @default(0)
  totalSalesCents       Int        @default(0)
  totalPayoutCents      Int        @default(0)

  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt

  // Relations
  game                  Game       @relation(fields: [gameId], references: [id])
  tickets               Ticket[]
  walletTransactions    WalletTransaction[]

  @@index([gameId, status])
  @@index([gameId, drawDate])
}

// =============================================
// üéüÔ∏è TICKET MODEL
// ---------------------------------------------
// Represents a user‚Äôs purchased entry for a specific
// draw, including chosen numbers and result status.
// =============================================
model Ticket {
  id             String       @id @default(cuid())
  userId         String
  gameId         String
  drawId         String

  numbers        Int[]
  specialNumbers Int[]
  priceCents     Int
  payoutCents    Int          @default(0)
  status         TicketStatus @default(PENDING)

  createdAt      DateTime     @default(now())

  // Relations
  draw           Draw         @relation(fields: [drawId], references: [id], onDelete: Cascade)
  game           Game         @relation(fields: [gameId], references: [id])
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([gameId, status])
  @@index([userId])
}

// =============================================
// üî¢ ENUMS
// =============================================
enum DrawStatus {
  UPCOMING
  COMPLETED
}

enum TicketStatus {
  PENDING
  WON
  LOST
}
